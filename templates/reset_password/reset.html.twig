{% extends 'base.html.twig' %}

{% block title %}{{ 'reset_password.title' | trans }}{% endblock %}

{% block body %}
    <div class="container center">
        <div class="reset_password">
            <h1 class="mt-3">{{ 'reset_password.title' | trans }}</h1>

            {{ form_start(resetForm) }}
                <div class="form-group row">
            <div class="col-sm-4">
                <label>
                    {{'user.password'|trans}}
                    <button type="button" class="btn btn-link icon-popover" data-toggle="popover" data-trigger="hover" 
                    data-html="true" data-content="{{ 'password.info' | trans }}"><i class="bi bi-info-circle small"></i></button>
                    {{ form_errors(resetForm.plainPassword.first) }}
                </label>
            </div>
            <div class="col-sm-6">
                {{ form_widget(resetForm.plainPassword.first) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                {{ form_label(resetForm.plainPassword.second, '', {'label_attr': {'class': "col-form-label"}}) }}
            </div>
            <div class="col-sm-6">
                {{ form_widget(resetForm.plainPassword.second) }}
            </div>
        </div>
                <button class="btn btn-primary">{{ 'reset_password.button' | trans }}</button>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
