{% extends 'base.html.twig' %}

{% block title %}{{ 'reset_password.title' | trans }}{% endblock %}

{% block body %}
    <div class="container center">
        <div class="reset_password ">
            <h1 class="mt-3">{{ 'reset_password.title' | trans }}</h1>
            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            {{ form_start(requestForm) }}
                {{ form_widget(requestForm.email) }}
                <small>{{ 'reset_password.request' | trans }}</small>

                <button class="btn btn-dark" type="submit">{{ 'reset_password.send' | trans }}</button>
            {{ form_end(requestForm) }}
            <a href="{{ path('app_login')}}">{{ 'index.return' | trans }}</a>
        </div>
    </div>
{% endblock %}