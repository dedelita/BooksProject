<div class="modal fade" id="removeBookModal{{id}}{{type}}" tabindex="-1" role="dialog" aria-labelledby="removeBookModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h4 class="modal-title p-0 center">{{ 'book.remove' | trans }} {{ title }} ?</h4>
            </div>
            <div class="modal-body row">
            {{ form_start(form, { 'action': path('remove_book', {'idBook': id }) }) }}
            <div class="col pl-5">
            {% if comment %}
                {{ form_widget(form.deleteCom, {id: form.deleteCom.vars.id ~ id}) }}
                {{ form_label(form.deleteCom, {id: form.deleteCom.vars.id ~ id, attr: {class: 'form-check-label'} }) }}
            {% else %}
            <div class="not-displayed">
                {{ form_row(form.deleteCom, {id: form.deleteCom.vars.id ~ id, label_attr: {class: 'form-check-label'} , disabled:'disabled'}) }}
            </div>
            {% endif %}
            </div>
                <div class="text-right align-self-center col">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'cancel' | trans }}</button>
                    <button type="submit" class="btn btn-danger modal-submit">{{ 'yes' | trans }}</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>