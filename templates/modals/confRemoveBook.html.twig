<div class="modal fade" id="removeBookModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">{{ 'book.remove' | trans }}</h4>
                </div>
                <div class="modal-body">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'cancel' | trans }}</button>
                    <a href="{{ path('remove_book', {'idBook': idBook }) }}" class="btn btn-dark">{{ 'yes' | trans }}</button>
                </div>
            </div>
        </div>
    </div>