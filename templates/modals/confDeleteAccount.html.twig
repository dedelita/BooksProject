<div class="modal fade" id="deleteAccountModal" tabindex="-1" role="dialog" aria-labelledby="deleteAccountModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h4 class="modal-title p-0 center" id="deleteAccountModalLabel">{{ 'user.delete' | trans }}</h4>
            </div>
            <div class="modal-body">
                <div class="text-right align-self-center col">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'cancel' | trans }}</button>
                    <a href="{{ path('delete_user') }}" class="btn btn-danger modal-submit">{{ 'yes' | trans }}</a>
                </div>
            </div>
        </div>
    </div>
</div>